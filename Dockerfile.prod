# Etap 1: Budowanie aplikacji Next.js
FROM node:22.1.0 AS builder
WORKDIR /app

# Kopiowanie plików i instalacja zależności
COPY package.json package-lock.json ./
RUN npm install --production

COPY . .

# Budowanie aplikacji Next.js
RUN npm run build

# Etap 2: Uruchomienie aplikacji Next.js
FROM node:18
WORKDIR /app

# Kopiowanie plików z pierwszego etapu
COPY --from=builder /app ./

# Ustawienie zmiennych środowiskowych
ENV NODE_ENV=production
EXPOSE 3000

CMD ["npm", "start"]
